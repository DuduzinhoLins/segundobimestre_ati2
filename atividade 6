     funcao Tempo_Lido_Livro()Add commentMore actions
     {

     //vari√°veis
     	
     inteiro minutos_por_dia = 5
        
     inteiro dias_por_semana = 6
        
     inteiro semanas_por_ano = 52
        
     inteiro total_minutos = minutos_por_dia * dias_por_semana * semanas_por_ano
        
     real total_horas = total_minutos / 60.0

     //resposta
        
     escreva(" O tempo total em um ano: ", total_horas, " horas\n")
     
     }
	

programa
{
	   inclua biblioteca Util --> u
	Add commentMore actions
	   inclua biblioteca Matematica --> m

     funcao Lados_Prontos()
     {

     //variáveis
     	
     real lad1 = 11.5
       
     real lad2 = 6.3

     // Calculando a diagonal
        
     real diagonal = m.raiz(lado1 * lad1 + lad2 * lad2, 2)

     //resposta

     escreva("A quantidade mínima de fio necessária é ", diagonal, " metros.\n")
     
     }

     funcao Lados_Escolha()
     {

     //vaiáveis e peguntas
     	
     real lad1
     
     real lad2

     escreva("Digite o comprimento do primeiro lado (em metros): ")
     
     leia(lad1)

     escreva("Digite o comprimento do segundo lado (em metros): ")
     
     leia(lad2)

     real diagonal = m.raiz(lad1 * lad1 + lad2 * lad2, 2)
     
     //resposta
     
     escreva("A quantidade mínima de fio necessária é: ", diagonal, " metros.\n")
     
     }

	   funcao inicio()
	   {
	
	   //letra a
     Lados_Prontos()
     u.aguarde(10000)
     limpa()

	   //letra b
     Lados_Escolha()
     u.aguarde(10000)
     limpa()
		
	   }
}
